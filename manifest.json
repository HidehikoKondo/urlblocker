{
  "name": "URLBlcock",
  "description": "仕事の妨げになるWebサイトを見えないようにするChrome拡張です",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://www.yahoo.co.jp/*",
        "https://x.com/*",
        "https://www.facebook.com/*"
      ],
      "js": [
        "urlblocker.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}